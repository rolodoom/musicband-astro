---
import { Modal, ModalBody } from "free-astro-components";
import Button from "@/components/ui/Button.astro";
import { formatDate } from "@/utils/format";
import { slugify } from "@/utils/format";
import { Icon } from "astro-icon/components";
import StreamingIcons from "../ui/StreamingIcons.astro";

const { release } = Astro.props;

const { title, subtitle, date, description, image, label, format } = release;
const formattedDate = formatDate(date);
const slug = slugify(release.title);
---

<Modal
  id={`modal-${slug}`}
  size="full"
  class="custom-modal"
  showCloseIcon={false}
>
  <ModalBody>
    <div class="mx-auto max-w-4xl py-12">
      <header
        class="heading mb-10 flex flex-col items-center gap-2 md:items-start"
      >
        <h1 class="font-heading text-5xl font-extrabold uppercase">
          {title}
        </h1>
        <h2 class="font-serif text-xl italic">{subtitle}</h2>
      </header>
      <article
        class="mt-6 flex flex-wrap justify-center gap-12 md:flex-nowrap md:justify-start"
      >
        <div class="flex w-100 flex-col gap-6 md:w-1/2">
          <a
            href={`/images/releases/${image}`}
            data-fancybox
            data-caption={title}
            class="group relative block cursor-pointer overflow-hidden border! border-black/10!"
          >
            <img
              src={`/images/releases/thumbs/${image}`}
              alt={title}
              class="aspect-square w-full object-cover"
            />
            <div
              class="bg-primary/90 pointer-events-none absolute inset-0 flex items-center justify-center opacity-0 transition-opacity duration-300 group-hover:opacity-100"
            >
              <span class="text-4xl text-white">
                <Icon name="fa7-solid:magnifying-glass-plus" size={64} />
              </span>
            </div>
          </a>
        </div>
        <div class="flex w-100 flex-col gap-7 text-left font-serif md:w-1/2">
          <div
            set:html={description}
            class="prose prose-slate prose-h3:text-xl prose-h3:font-light prose-h3:mb-8 prose-h4:text-xl prose-h4:font-heading"
          />

          <StreamingIcons streaming={release.streaming} />

          <ul>
            <li><strong>Released:</strong> {formattedDate}</li>
            <li><strong>Label:</strong> {label}</li>
            <li><strong>Format:</strong> {format}</li>
          </ul>

          <Button type="button" data-modal-close class="self-start"
            ><Icon name="fa7-solid:xmark" size={16} class="mr-1" />Close</Button
          >
        </div>
      </article>
    </div>
  </ModalBody>
</Modal>
