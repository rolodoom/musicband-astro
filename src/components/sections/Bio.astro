---
import BioItem from "@/components/shared/BioItem.astro";
import Section from "@/components/shared/Section.astro";
import bioData from "@/data/bio.json";

export interface Props {
  data: {
    id: string;
    title: string;
    subtitle: string;
    bios: Array<{
      title: string;
      subtitle: string;
      description: string;
      image: string;
      date: string;
    }>;
  };
}

const darkmode = false;

const { id, title, subtitle, bios } = bioData;
const lineColor = darkmode ? "before:bg-white" : "before:bg-primary";
---

<Section title={title} subtitle={subtitle} id={id} darkmode={darkmode}>
  <div class="mx-auto max-w-7xl">
    <ul class={`timeline ${lineColor}`}>
      {
        bios.map((bio, index) => (
          <BioItem
            bio={bio}
            index={index}
            isLast={index === bios.length - 1}
            darkmode={darkmode}
          />
        ))
      }
    </ul>
  </div>
</Section>
